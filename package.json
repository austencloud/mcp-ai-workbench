{
  "name": "mcp-ai-workbench",
  "version": "1.0.0",
  "description": "Unified MCP AI Workbench - Full-stack reasoning and AI platform",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "vite dev --host --clearScreen false",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p src/server/tsconfig.json && node scripts/fix-imports.js",
    "build:client": "vite build",
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:server": "node dist/server/index.js",
    "start:client": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:reasoning": "node src/tests/test-reasoning-system.js",
    "test:stress": "node src/tests/test-reasoning-stress.js",
    "migrate": "prisma migrate dev --schema=src/server/prisma/schema.prisma",
    "generate": "prisma generate --schema=src/server/prisma/schema.prisma",
    "check": "svelte-kit sync && svelte-check --tsconfig ./src/client/tsconfig.json",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "clean": "rimraf dist node_modules/.cache",
    "postinstall": "npm run generate"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@codemirror/basic-setup": "^0.20.0",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.36.8",
    "@fastify/cors": "^9.0.0",
    "@fastify/websocket": "^11.1.0",
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^6.8.2",
    "@sveltejs/adapter-auto": "^3.3.1",
    "@sveltejs/kit": "^2.21.1",
    "@sveltejs/vite-plugin-svelte": "^4.0.4",
    "axios": "^1.9.0",
    "bignumber.js": "^9.3.0",
    "bull": "^4.16.5",
    "cheerio": "^1.0.0",
    "compromise": "^14.14.4",
    "concurrently": "^9.1.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "decimal.js": "^10.5.0",
    "dotenv": "^16.5.0",
    "duckduckgo-search": "^1.0.7",
    "fastify": "^4.0.0",
    "helmet": "^8.1.0",
    "highlight.js": "^11.11.1",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "keyword-extractor": "^0.0.28",
    "mathjs": "^14.5.1",
    "ml-distance": "^4.0.1",
    "natural": "^8.1.0",
    "neo4j-driver": "^5.28.1",
    "node-cache": "^5.1.2",
    "node-nlp": "^5.0.0-alpha.5",
    "openai": "^4.103.0",
    "playwright": "^1.52.0",
    "puppeteer": "^24.9.0",
    "rate-limiter-flexible": "^7.1.1",
    "redis": "^5.1.1",
    "set-cookie-parser": "^2.7.1",
    "sqlite3": "^5.1.7",
    "stemmer": "^2.0.1",
    "stopword": "^3.1.4",
    "string-similarity": "^4.0.4",
    "svelte": "^5.0.0",
    "url-parse": "^1.5.10",
    "user-agents": "^1.1.554",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@testing-library/svelte": "^5.2.8",
    "@types/crypto-js": "^4.2.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.0.0",
    "@types/user-agents": "^1.0.4",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "kill-port": "^2.0.1",
    "postcss": "^8.5.3",
    "prisma": "^6.8.2",
    "rimraf": "^6.0.1",
